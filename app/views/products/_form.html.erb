<%= form_with model: @product do |form| %>
  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @product.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @product.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field" >
    <%= form.label :price %><br>
    <%= form.number_field :price %><br>
    <% @product.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity %><br>
    <% @product.errors.full_messages_for(:quantity).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <% if params[:action] == "new" %>
     <%= form.select :category_id, Category.pluck(:title,:id) %><br>
    <%else%>
     <%= form.select :category_id, Category.pluck(:title,:id), selected: @product.category.id%><br>
    <%end%>
    <% @product.errors.full_messages_for(:category).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%=form.label :image %>
    <%=form.file_field :image %>
  </div>

  <div>
    <%= form.submit %>
  </div>
  
<% end %>
